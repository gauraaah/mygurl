    .main-text {
        position: absolute;
        top: 38%;
        width: 100%;
        text-align: center;
        font-size: 26px;
        opacity: 0;
        animation: fadeIn 3s forwards;
        z-index: 10;
    }

    .hidden-text {
        position: absolute;
        bottom: 14%;
        width: 100%;
        text-align: center;
        font-size: 20px;
        opacity: 0;
        transition: opacity 2s;
        z-index: 10;
    }

    .tap {
        position: absolute;
        top: 58%;
        width: 100%;
        text-align: center;
        font-size: 14px;
        opacity: 0.7;
        z-index: 10;
    }

    .rose {
        position: absolute;
        width: 70px;
        animation: floatRose linear infinite;
        pointer-events: none;
    }

    .heart {
        position: absolute;
        width: 40px;
        animation: floatHeart linear infinite;
        pointer-events: none;
        filter: drop-shadow(0 0 6px red);
    }

    @keyframes floatRose {
        from {
            transform: translateY(110vh) rotate(0deg);
            opacity: 1;
        }
        to {
            transform: translateY(-10vh) rotate(20deg);
            opacity: 0;
        }
    }

    @keyframes floatHeart {
        from {
            transform: translateY(110vh) scale(1);
            opacity: 1;
        }
        to {
            transform: translateY(-10vh) scale(1.4);
            opacity: 0;
        }
    }

    @keyframes fadeIn {
        to { opacity: 1; }
